{
  "name": "reep.io",
  "version": "1.2.3",
  "description": "The official reep.io source code",
  "dependencies": {
    "ajv": "^6.10.0",
    "angular": "^1.5.8",
    "angular-animate": "^1.5.8",
    "angular-route": "^1.5.8",
    "angular-ui-bootstrap": "^2.5.0",
    "angulartics": "^1.3.0",
    "angulartics-piwik": "^1.0.4",
    "bootstrap": "^3.3.7",
    "font-awesome": "^4.7.0",
    "jquery": "^3.4.1",
    "pastejs": "^1.0.6",
    "peer": "^0.2.10",
    "peerjs": "file:./abandonedlibs/peerjs",
    "popper": "^1.0.1",
    "swfobject": "file:./abandonedlibs/swfobject"
  },
  "scripts": {
    "build-html": "rsync -r src/html/ public/html && rsync src/html/*.html public/",
    "build-js": "webpack -p",
    "build-media": "rsync -r src/media/ public/media",
    "build": "parallelshell 'yarn build-html' 'yarn build-media' 'yarn build-js'",
    "watch-html": "watch 'yarn build-html' 'src/html'",
    "watch-js": "webpack -w -p",
    "watch-media": "watch 'yarn build-media' 'src/media'",
    "watch": "parallelshell 'yarn watch-html' 'yarn watch-js' 'yarn watch-media'",
    "start": "parallelshell 'http-server public -a 0.0.0.0 -p 9001 -c-1 -o' 'yarn watch'",
    "lint": "eslint --ext js --fix src tests",
    "pretest": "yarn lint",
    "test": "karma start"
  },
  "author": "https://github.com/kodekraftwerk",
  "license": "GPL-2.0",
  "devDependencies": {
    "angular-mocks": "^1.6.4",
    "babel-core": "^6.26.3",
    "babel-loader": "^6.2.10",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.18.0",
    "cli-color": "^1.2.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "http-server": "^0.11.1",
    "jasmine-core": "^2.3.4",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^0.2.1",
    "karma-firefox-launcher": "^0.1.6",
    "karma-jasmine": "^0.3.6",
    "karma-junit-reporter": "^1.2.0",
    "less": "^2.7.2",
    "less-loader": "^4.0.3",
    "parallelshell": "file:./abandonedlibs/parallelshell",
    "style-loader": "^0.16.1",
    "url-loader": "^1.1.2",
    "watch": "^0.16.0",
    "webpack": "^2.7.0"
  },
  "subdomain": "kodekraftwerk-reepio",
  "engines": {
    "node": "0.12.x"
  }
}
